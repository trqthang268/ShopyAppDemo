@model IEnumerable<Shopy_App.Models.Product>

<h2>Products</h2>
<form asp-controller="Home" asp-action="Index" method="get">
    <input type="text" name="searchQuery" placeholder="Search products" value="@ViewData["searchQuery"]" />
    <button type="submit">Search</button>
</form>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="/products/@product.ImageFileName" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text">$@product.Price</p>
                    <a asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>
